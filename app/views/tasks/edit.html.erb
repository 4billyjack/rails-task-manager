<div class="container w-100 mt-5">
    <h1 class="mt-25">Edit Task</h1>
    <form action=<%= "http://localhost:3000/tasks/#{@task.id}" %> method="patch" class="ml-2">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="form-group">
        <label for="title">Task Title</label>
        <input type="text" class="form-control" name="task[title]" id="title" value=<%= @task.title %> >
      </div>
      <div class="form-group">
        <label for="details">Task Details</label>
        <input type="text" class="form-control" name="task[details]" id="details" value=<%= @task.details %> >
      </div>
      <div class="form-check">
        <input type="checkbox" class="form-check-input" id="completed">
        <label class="form-check-label mb-2" for="exampleCheck1">Mark the task complete</label>
      </div>
      <button type="submit" class="btn btn-primary">Update Task</button>
    </form>
  </div>
